<div class="container col-md-6" style="padding:2rem;">
  <h2>Forgot your password?</h2>
  <div style="padding:2rem;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-1">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"padding-top:5px; margin-left:1rem; width:15rem;"%>
      </div>

      <div class="actions my-4">
        <%= f.submit "Send me reset password instructions", class:"btn btn-dark" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
